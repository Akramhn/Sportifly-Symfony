{% extends 'baseadmin.html.twig' %}

{% block title  %} Liste Categorie {% endblock %}

  {% block stylesheets %}
      <link rel="stylesheet" href="{{asset('backoffice/assets/css/style.css')}}">
      <link rel="stylesheet" href="{{ asset('frontoffice/css/table.css') }}">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

  {% endblock %}

{% block body %}
    <div style="position: absolute; margin-left: 500px; margin-top: 100px">
        <h4>List Categorie</h4>

    <a href="{{path('app_addcateg')}}" class="btn btn-primary" tabindex="-1" role="button">Ajouter Categorie</a>
<table class="styled-table">
    <tr>
        <td>Nom</td>
        <td>Description</td>
        <td><b>Update</b></td>
        <td><b>Delet</b></td>



    </tr>
    {% for i in tabCategorie%}
        <tr>
            <td>{{ i.nom }}</td>
            <td>{{i.description }}</td>

            <td><a href="{{ path('app_updatecategorie',{'id':i.id}) }}"  class="btn btn-primary" tabindex="-1" role="button" >Update</a> </td>
            <td><a  href="{{ path('app_removecategorie',{'id':i.id}) }}"class="btn btn-primary" tabindex="-1" role="button" >delete</a> </td>

            <br>
        </tr>
    {% endfor %}
</table>
       </div>
    {% endblock %}