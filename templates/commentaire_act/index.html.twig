{% extends 'baseadmin.html.twig'%}
{%block body %}
    <div style="position: absolute; margin-left: 500px; margin-top: 100px">
    <h4>list commentaire actualites</h4>
    <table border="2">
        <tr>
            <td>id</td>
            <td>id actualite</td>
            <td>date</td>
            <td>contenue</td>

        </tr>
        {% for i in form%}
            <tr>
                <td>{{i.id}}</td>
                <td>{{i.idActualite}}</td>
                <td>{{i.date|date("F jS \\a\\t g:ia")}}</td>
                <td>{{i.contenu}}</td>
               <td><a href="{{path('app_updatecommentAct',{'id':i.id})}}">Update</a></td>
               <td><a href="{{path('app_supprimercommentaireAct',{'id':i.id})}}">delete</a> </td>

                <br>
            </tr>

        {%endfor%}
    </table>
    </div>
{%endblock%}