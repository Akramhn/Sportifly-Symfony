{% extends 'baseadmin.html.twig' %}

{% block title  %} Add Offre {% endblock %}
  {% block stylesheets %}
      <link rel="stylesheet" href="{{asset('backoffice/assets/css/style.css')}}">
      <link rel="stylesheet" href="{{ asset('frontoffice/css/form.css') }}">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

  {% endblock %}

{% block body %}
    <div style="position: absolute; margin-left: 500px; margin-top: 100px">

    <h1>Ajouter un offre</h1>
    <div id="msform">
        <!-- progressbar -->

        <!-- fieldsets -->
        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
        <fieldset>
            <h2 class="fs-title">Add Offre</h2>

            <div class="form-group">
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">

                {{ form_widget(form.prix) }}
                {{ form_errors(form.prix) }}
            </div>
            <div class="form-group">

                {{ form_widget(form.nbplace) }}
                {{ form_errors(form.nbplace) }}
            </div>
            <br>
            <div class="form-group">

                {{ form_widget(form.affiche) }}
                {{ form_errors(form.affiche) }}
            </div>

            <div class="form-group">
                {{ form_label(form.id_category,'sport') }}

                {{ form_widget(form.id_category) }}

            </div>

            <br>

            <button class="btn btn-primary">
                Ajouter Offre
            </button>
            {{ form_end(form) }}
        </fieldset>


    </div>

{% endblock %}